<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+android:id/title"
        style="?android:attr/listSeparatorTextViewStyle"
        android:text="@string/connection_settings_title"
        />
    <EditText android:id="@+id/edit_ip"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:hint="@string/edit_ip" />
    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/server_ip"
        android:onClick="lookUpServerIP" />
    <TextView android:id="@+android:id/title"
        style="?android:attr/listSeparatorTextViewStyle"
        android:text="@string/neural_network_settings_title"
        />
    <EditText android:id="@+id/edit_num_of_neurons"
        android:inputType="number"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:hint="@string/edit_num_of_neurons"/>
    <CheckBox android:id="@+id/checkbox_num_of_neurons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_num_of_neurons"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/zero_weights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_weights"
        android:onClick="onCheckboxClicked"/>
    <TextView android:id="@+id/synaptic_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/synaptic_filter"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_exponential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exponential_filter"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_constant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/constant_filter"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    <Button
        android:id="@+id/startSimulationButton"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/start_simulation"
        android:onClick="startSimulation" />
</LinearLayout>